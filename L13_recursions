def factorial(n):
    if n < 2:
        return 1
    else:
        return n * factorial(n - 1)


def number_of_groups(n, k):
    if k < 0 or n < 0:
        raise ValueError("n и k должны быть неотрицательными")
    if k > n:
        return 0
    k = min(k, n - k)
    return factorial(n) // (factorial(n - k) * factorial(k))

    